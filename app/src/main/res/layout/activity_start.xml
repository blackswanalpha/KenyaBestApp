<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"

    tools:context=".Start">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/View"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"/>
        <androidx.cardview.widget.CardView

            app:cardCornerRadius="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"

            app:cardElevation="20dp"

            >
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img"
                android:scaleType="fitXY"

                android:adjustViewBounds="true"
                app:shapeAppearance="@drawable/conner"

                />
        </androidx.cardview.widget.CardView>

        <TextView android:layout_height="wrap_content" android:layout_marginTop="22dp" android:layout_width="match_parent" app:layout_constraintTop_toTopOf="parent" tools:targetApi="jelly_bean" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toEndOf="parent" android:textColor="@color/black" android:textSize="23sp" android:text="Register Here" android:gravity="center" android:fontFamily="@font/poppins_bold" android:id="@+id/textView"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/desc_two"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/poppins_light"
            android:textSize="14dp"
            android:textColor="@color/black"

            android:padding="10dp"
            android:textAlignment="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >




            <Button android:layout_height="wrap_content" android:fontFamily="@font/poppins_medium" android:layout_marginRight="10dp"  android:layout_marginLeft="10dp" android:layout_width="match_parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:text="Login to an account" android:id="@+id/buttonLogin" app:layout_constraintTop_toBottomOf="@+id/progress" android:layout_marginTop="20dp"  android:background="@drawable/connerred" android:textColor="@color/white"/>


            <Button
                android:id="@+id/buttonSignUp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/connergreen"
                android:text="create new account"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/progress" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>


</LinearLayout>